package fr.idapps.espressoplayground.addressbook;

import android.support.v7.widget.RecyclerView;
import android.text.TextUtils;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.TextView;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Comparator;
import java.util.List;

import fr.idapps.espressoplayground.R;


public class ContactsRecyclerAdapter extends RecyclerView.Adapter<ContactsRecyclerAdapter.ViewHolder> {

    private List<Contact> mContactList;
    private List<Contact> mFilteredContactsList;
    private String mFilter;

    public static final Comparator<Contact> COMPARATOR_BY_ALPHABETICAL_NAME = new Comparator<Contact>() {
        @Override
        public int compare(Contact contact1, Contact contact2) {
            return contact1.getName().compareTo(contact2.getName());
        }
    };

    static class ViewHolder extends RecyclerView.ViewHolder {

        TextView mNameTextView;
        TextView mEmailTextView;
        TextView mPhoneTextView;

        ViewHolder(View view) {
            super(view);
            mNameTextView = (TextView) view.findViewById(R.id.mNameTextView);
            mEmailTextView = (TextView) view.findViewById(R.id.mEmailTextView);
            mPhoneTextView = (TextView) view.findViewById(R.id.mPhoneTextView);
        }

    }

    @Override
    public ViewHolder onCreateViewHolder(ViewGroup parent, int viewType) {
        View view = LayoutInflater.from(parent.getContext()).inflate(R.layout.contact_item_view, null);
        return new ViewHolder(view);
    }

    @Override
    public void onBindViewHolder(ViewHolder holder, int position) {
        Contact contact = mFilteredContactsList.get(position);
        holder.mNameTextView.setText(contact.getName());
        holder.mEmailTextView.setText(contact.getEmail());
        holder.mPhoneTextView.setText(contact.getPhone());
    }

